    <div id="YES">
    <input id="nickname" value="" placeholder="Enter your nickname here!" required><button onclick ="setNickname()">Set username</button>
    </div>
    <div id="userName">
    </div>
    <div id="userList">
    </div>
    <div id="ahyes">
    </div>
    <ul id="clientName"></ul>
    <ul id="messages"></ul>
    <form actions="" id="formMessage">
        <input id="m" autocomplete="off" onchange="userType()"/><button>Send</button>
    </form>
</body>
</html>